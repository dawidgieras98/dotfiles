{
  "snippet_sort_order": "top",
  "show_edit_predictions": false,
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    }
  },
  "edit_predictions": {
    "mode": "subtle",
    "enabled_in_text_threads": false
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "inline_code_actions": true,
  "icon_theme": "JetBrains Icons Dark",
  "lsp_document_colors": "inlay",
  "minimap": {
    "show": "never"
  },
  "search": {
    "include_ignored": true,
    "button": false,
    "case_sensitive": true
  },
  "project_panel": {
    "sticky_scroll": true,
    "dock": "right"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true,
    "selections_menu": true
  },
  "tabs": {
    "show_diagnostics": "all",
    "file_icons": true
  },
  "ui_font_family": "Monaspace Neon Var",
  "buffer_font_family": "Monaspace Neon Var",
  "buffer_font_features": {
    "liga": true,
    "calt": true,
    "ss01": true,
    "ss02": true,
    "ss03": true,
    "ss05": true,
    "ss06": true,
    "ss07": true,
    "ss08": true,
    "ss09": true,
    "ss10": true
  },
  "hide_mouse": "on_typing_and_movement",
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "theme": "Github Dark Tritanopia",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "vim_mode": true,
  "ui_font_size": 19,
  "buffer_font_size": 19,
  "cursor_blink": false,
  "buffer_line_height": {
    "custom": 1.7
  },
  "relative_line_numbers": true,
  "tab_bar": {
    "show": true
  },
  "scrollbar": {
    "show": "never"
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "preview_tabs": {
    "enabled": false
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },
  "vim": {
    "use_system_clipboard": "always"
  },
  "wrap_guides": [90],
  "show_wrap_guides": true
}
